{% extends "app.html.twig" %}

{% block title %}Vehicles manage{% endblock %}

{% block body %}
<h2 class="pb-2 border-bottom">Manage Vehicles</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Brand</th>
      <th scope="col">Model</th>
      <th scope="col">Plate</th>
      <th scope="col">License Required</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for vehicle in vehicles %}  
    <tr>
      <th scope="row">{{ vehicle.id }}</th>
      <td>{{ vehicle.brand }}</td>
      <td>{{ vehicle.model }}</td>
      <td>{{ vehicle.plate }}</td>
      <td>{{ vehicle.licenseRequired }}</td>
      <td>
        <div class="row g-2">
        <button type="submit" class="btn btn-outline-primary col-auto">Edit</button>
        <form action="{{ path('vehicles_delete', {'id': vehicle.id}) }}" method="post" class="col-auto" onsubmit="return confirm('Are you sure?')">
            <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
        </div>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}